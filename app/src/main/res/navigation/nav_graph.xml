<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.pokemonlistapp.fragments.MainFragment"
        android:label="List Pokemon"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.pokemonlistapp.fragments.DetailsFragment"
        android:label="Pokemon Details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="pokemonDetail"
            app:argType="com.example.pokemonlistapp.models.PokemonResponseItem" />
    </fragment>
</navigation>